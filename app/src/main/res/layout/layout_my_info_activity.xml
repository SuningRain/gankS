<?xml version="1.0" encoding="utf-8"?>
<com.lsh.gank.ui.widget.SuperScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/tabIndicatorColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/contentBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_my_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/avatar"/>

        <TextView
            android:id="@+id/tv_my_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/about_statement_01"
            android:textColor="?attr/textColorSecondary"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/about_statement_02"
            android:textColor="?attr/textColorSecondary"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/gankio_url"
            android:textColor="?attr/textColorSecondary"/>

        <TextView
            android:id="@+id/tv_myblog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="@string/blog_url"
            android:textColor="?attr/textColorSecondary"/>
    </LinearLayout>
</com.lsh.gank.ui.widget.SuperScrollView>